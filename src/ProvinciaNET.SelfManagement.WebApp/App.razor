@using ProvinciaNET.SelfManagement.WebApp.Shared;

@inject IHttpContextAccessor HttpContextAccessor

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <RedirectToLogin IsAuthenticated="@IsAuthenticated" />
                </NotAuthorized>
                <Authorizing>
                </Authorizing>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <RadzenRow>
                    <RadzenColumn SizeMD="12" style="margin-top: 5rem; margin-bottom: 5rem">
                        <RadzenText Text="Page not found" TextStyle="TextStyle.DisplayH1" style="margin: 0; margin-bottom: 2rem" TextAlign="TextAlign.Center" />
                        <RadzenText Text="Sorry, but there's nothing here!" TextStyle="TextStyle.H6" style="margin: 0" TextAlign="TextAlign.Center" TagName="TagName.P" />
                    </RadzenColumn>
                </RadzenRow>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

@code {
    bool IsAuthenticated = false;

    protected override void OnInitialized()
    {
        if (HttpContextAccessor.HttpContext != null && HttpContextAccessor.HttpContext.User.Identity != null)
        {
            IsAuthenticated = HttpContextAccessor.HttpContext.User.Identity.IsAuthenticated;
        }
    }
}